# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

set $lastPass [g] Generate Secure Password [Alt+g], [i] Recheck Page [Alt+i], [w] Site search [Alt+w], [Page Up] Fill In Next Login [Alt+PageUp], [PageDown] Fill in Previous Login [Alt+PageDown], [f] Sumbit Form [Ctrl+Alt+f], [d] Fill In Default Form Fill [Ctrl+Shift+i]

mode "$lastPass" {

	bindsym --release g exec --no-startup-id xdotool key --clearmodifiers alt+g 
	bindsym --release i exec --no-startup-id xdotool key --clearmodifiers alt+i
	bindsym --release w exec --no-startup-id xdotool key --clearmodifiers alt+w
	bindsym --release PageUp exec --no-startup-id xdotool key --clearmodifiers alt+PageUp
	bindsym --release PageDown exec --no-startup-id xdotool key --clearmodifiers alt+PageDown
	bindsym --release f exec --no-startup-id xdotool key --clearmodifiers ctrl+alt+f
	bindsym --release d exec --no-startup-id xdotool key --clearmodifiers ctrl+shift+i
	bindsym Escape mode "default"
	bindsym Return mode "default"

}

bindsym ctrl+shift+l mode "$lastPass"

